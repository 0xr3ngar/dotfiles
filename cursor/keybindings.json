// Place your key bindins in this file to override the defaults
[
  {
    "key": "shift+g",
    "command": "-list.focusLast",
    "when": "listFocus && !inputFocus && (vim.mode == 'Normal' || vim.mode == 'Visual')",
  },
  {
    "key": "shift+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && !editorReadonly",
  },
  {
    "key": "g shift+a",
    "command": "editor.action.referenceSearch.trigger",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "g d",
    "command": "editor.action.revealDefinition",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space p s",
    "command": "workbench.action.findInFiles",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space p f",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "g g",
    "command": "cursorTop",
    "when": "editorTextFocus && (vim.mode == 'Normal' || vim.mode == 'Visual')",
  },
  {
    "key": "space v",
    "command": "workbench.action.splitEditor",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space h",
    "command": "workbench.action.navigateLeft",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space r n",
    "command": "editor.action.rename",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space o",
    "command": "workbench.view.explorer",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space g s",
    "command": "workbench.view.scm",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space t w",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space t n",
    "command": "workbench.action.terminal.new",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space s",
    "command": "workbench.action.showCommands",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space z",
    "command": "workbench.action.toggleZenMode",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space p t",
    "command": "workbench.action.togglePanel",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space s b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space m",
    "command": "editor.action.toggleMinimap",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "space s a",
    "command": "editor.action.selectHighlights",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "g i",
    "command": "editor.action.goToImplementation",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "g p",
    "command": "editor.action.peekDefinition",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  {
    "key": "g c",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && (vim.mode == 'Normal' || vim.mode == 'Visual')",
  },
  {
    "key": "shift+enter",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "\u001b\r",
    },
    "when": "terminalFocus",
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorFocus",
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorFocus",
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorFocus",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorFocus",
  },
  // Navigate from terminal back to editor
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus",
  },
  // Navigate from editor to terminal
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus && panelVisible",
  },
  // Flash jump (like flash.nvim)
  {
    "key": "s",
    "command": "flash-vscode.jump",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
  // Flash jump in visual mode (extends selection)
  {
    "key": "s",
    "command": "flash-vscode.jump",
    "when": "editorTextFocus && vim.mode == 'Visual'",
  },
  // Quick buffer switching (like :bn / :bp)
  {
    "key": "shift+l",
    "command": "workbench.action.nextEditor",
    "when": "vim.mode == 'Normal'",
  },
  {
    "key": "shift+h",
    "command": "workbench.action.previousEditor",
    "when": "vim.mode == 'Normal'",
  },
  // Horizontal split (space v is already vertical)
  {
    "key": "space s",
    "command": "workbench.action.splitEditorDown",
    "when": "editorTextFocus && vim.mode == 'Normal'",
  },
]
